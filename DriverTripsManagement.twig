{% extends 'front/base.html.twig' %}

{% block title %}Driver Dashboard - WamiaGo{% endblock %}

{% block page_stylesheets %}
    <link href="{{ asset('css/front/Carpooling/carpooling.css') }}?v={{ 'now'|date('YmdHi') }}" rel="stylesheet">
    <style>
        /* Carpooling driver specific styles */
        .bg-carpooling {
            background-color: #4c6ef5;
        }

        .bg-carpooling-light {
            background-color: rgba(76, 110, 245, 0.1);
        }

        .text-carpooling {
            color: #4c6ef5;
        }

        .btn-carpooling {
            background-color: #4c6ef5;
            border-color: #4c6ef5;
            color: white;
        }

        .btn-carpooling:hover {
            background-color: #3b5bdb;
            border-color: #3b5bdb;
            color: white;
        }

        .btn-outline-carpooling {
            background-color: transparent;
            border-color: #4c6ef5;
            color: #4c6ef5;
        }

        .btn-outline-carpooling:hover {
            background-color: #4c6ef5;
            color: white;
        }

        /* Driver dashboard specific styles */
        .driver-stats-card {
            transition: all 0.3s ease;
            border-radius: 12px;
            overflow: hidden;
        }

        .driver-stats-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 30px rgba(0,0,0,0.1);
        }

        .trip-card {
            border-radius: 12px;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .trip-card:hover {
            box-shadow: 0 10px 25px rgba(76, 110, 245, 0.15);
            transform: translateY(-5px);
        }

        .trip-card .card-header {
            background-color: #fff;
            border-bottom: 1px solid rgba(0,0,0,0.05);
            padding: 15px 20px;
        }

        .trip-status {
            position: absolute;
            top: 15px;
            right: 15px;
            z-index: 2;
        }

        .badge-booked {
            background: linear-gradient(45deg, #38b2ac, #4c51bf);
            color: white;
            padding: 8px 12px;
            border-radius: 30px;
            font-weight: 600;
            box-shadow: 0 4px 10px rgba(76, 110, 245, 0.3);
            animation: pulse 2s infinite;
        }

        @keyframes pulse {
            0% {
                box-shadow: 0 0 0 0 rgba(76, 110, 245, 0.7);
            }
            70% {
                box-shadow: 0 0 0 8px rgba(76, 110, 245, 0);
            }
            100% {
                box-shadow: 0 0 0 0 rgba(76, 110, 245, 0);
            }
        }

        .trip-actions {
            display: flex;
            gap: 8px;
        }

        .btn-sm-action {
            width: 38px;
            height: 38px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            color: white;
            transition: all 0.3s ease;
        }

        .btn-sm-action:hover {
            transform: scale(1.1);
        }

        .btn-sm-action.edit {
            background-color: #3b82f6;
        }

        .btn-sm-action.delete {
            background-color: #ef4444;
        }

        .no-trips-container {
            background: linear-gradient(45deg, #f9fafb, #f3f4f6);
            border-radius: 15px;
            padding: 60px 30px;
            text-align: center;
        }

        .trip-detail-row {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
        }

        .trip-detail-icon {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background-color: rgba(76, 110, 245, 0.1);
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 15px;
            color: #4c6ef5;
        }

        .trip-card-header {
            position: relative;
            padding-bottom: 15px;
            margin-bottom: 15px;
        }

        .trip-card-header:after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 50px;
            height: 3px;
            background: #4c6ef5;
        }

        .trip-route-visual {
            display: flex;
            align-items: center;
            margin: 20px 0;
        }

        .city-point {
            width: 12px;
            height: 12px;
            border-radius: 50%;
            background-color: #4c6ef5;
            position: relative;
        }

        .route-line {
            flex-grow: 1;
            height: 3px;
            background: linear-gradient(90deg, #4c6ef5, #38b2ac);
            margin: 0 10px;
            position: relative;
        }

        .modal-content {
            border-radius: 15px;
            overflow: hidden;
            border: none;
            box-shadow: 0 25px 50px rgba(0,0,0,0.2);
        }

        .modal-header {
            background-color: #4c6ef5;
            color: white;
            border: none;
            padding: 20px;
        }

        .modal-body {
            padding: 30px;
        }

        .modal-footer {
            border-top: 1px solid rgba(0,0,0,0.05);
            padding: 20px;
        }

        .form-control:focus, .form-select:focus {
            border-color: #4c6ef5;
            box-shadow: 0 0 0 0.25rem rgba(76, 110, 245, 0.25);
        }

        .status-container {
            display: flex;
            align-items: center;
            gap: 5px;
        }

        .status-dot {
            width: 10px;
            height: 10px;
            border-radius: 50%;
        }

        .dot-available {
            background-color: #10b981;
        }

        .dot-booked {
            background-color: #6366f1;
        }

        .stats-icon {
            font-size: 2rem;
            width: 60px;
            height: 60px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 10px;
        }

        .tab-bar {
            background-color: #f8f9fa;
            border-radius: 50px;
            padding: 5px;
            margin-bottom: 30px;
            display: flex;
            overflow-x: auto;
            scrollbar-width: none;
        }

        .tab-bar::-webkit-scrollbar {
            display: none;
        }

        .tab-item {
            padding: 12px 25px;
            border-radius: 50px;
            font-weight: 600;
            color: #6b7280;
            cursor: pointer;
            white-space: nowrap;
            transition: all 0.3s ease;
        }

        .tab-item.active {
            background-color: #4c6ef5;
            color: white;
            box-shadow: 0 4px 15px rgba(76, 110, 245, 0.3);
        }

        .tab-content {
            display: none;
        }

        .tab-content.active {
            display: block;
            animation: fadeIn 0.5s ease;
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .add-trip-fab {
            position: fixed;
            bottom: 30px;
            right: 30px;
            width: 65px;
            height: 65px;
            border-radius: 50%;
            background-color: #4c6ef5;
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 24px;
            box-shadow: 0 6px 20px rgba(76, 110, 245, 0.4);
            transition: all 0.3s ease;
            z-index: 1000;
            cursor: pointer;
        }

        .add-trip-fab:hover {
            transform: scale(1.1) rotate(90deg);
            background-color: #3b5bdb;
        }

        .passenger-preview {
            width: 35px;
            height: 35px;
            border-radius: 50%;
            background-color: #e5e7eb;
            color: #4b5563;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: -10px;
            border: 2px solid white;
            font-size: 14px;
            font-weight: 600;
        }

        .passenger-preview-container {
            display: flex;
            margin-top: 10px;
        }

        .passenger-count-more {
            background-color: #4c6ef5;
            color: white;
        }

        .card-footer {
            background-color: rgba(76, 110, 245, 0.05);
            border-top: none;
            padding: 15px 20px;
        }
    </style>
{% endblock %}

{% block hero %}
    <div class="hero-section bg-carpooling text-white py-4">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-7">
                    <h1 class="display-4 fw-bold">Driver Dashboard</h1>
                    <p class="lead">Manage your carpooling trips and bookings in one place</p>
                </div>
                <div class="col-md-5 d-none d-md-block text-end">
                    <img src="{{ asset('images/front/driver.png') }}" alt="Driver Dashboard" class="img-fluid" style="max-height: 180px;">
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block content %}
    <section class="py-4">
        <div class="container">
            <!-- Dashboard Stats -->
            <div class="row g-4 mb-5">
                <div class="col-md-3">
                    <div class="card h-100 border-0 shadow-sm driver-stats-card">
                        <div class="card-body text-center p-4">
                            <div class="stats-icon bg-carpooling-light text-carpooling mx-auto">
                                <i class="fas fa-route"></i>
                            </div>
                            {#  <h3 class="fs-2 fw-bold">{{ driverTrips|length }}</h3>#}
                            <p class="text-muted mb-0">Total Trips</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="card h-100 border-0 shadow-sm driver-stats-card">
                        <div class="card-body text-center p-4">
                            <div class="stats-icon bg-carpooling-light text-carpooling mx-auto">
                                <i class="fas fa-chair"></i>
                            </div>
                            {% set totalSeats = 0 %}
                            {% for trip in driverTrips %}
                                {% set totalSeats = totalSeats + trip.availableSeats %}
                            {% endfor %}
                            <h3 class="fs-2 fw-bold">{{ totalSeats }}</h3>
                            <p class="text-muted mb-0">Available Seats</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="card h-100 border-0 shadow-sm driver-stats-card">
                        <div class="card-body text-center p-4">
                            <div class="stats-icon bg-carpooling-light text-carpooling mx-auto">
                                <i class="fas fa-calendar-check"></i>
                            </div>
                            {% set bookedTrips = 0 %}
                            {% for trip in driverTrips %}
                                {% if trip.bookings|length > 0 %}
                                    {% set bookedTrips = bookedTrips + 1 %}
                                {% endif %}
                            {% endfor %}
                            <h3 class="fs-2 fw-bold">{{ bookedTrips }}</h3>
                            <p class="text-muted mb-0">Booked Trips</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="card h-100 border-0 shadow-sm driver-stats-card">
                        <div class="card-body text-center p-4">
                            <div class="stats-icon bg-carpooling-light text-carpooling mx-auto">
                                <i class="fas fa-coins"></i>
                            </div>
                            {% set totalEarnings = 0 %}
                            {% for trip in driverTrips %}
                                {% for booking in trip.bookings %}
                                    {% set totalEarnings = totalEarnings + trip.price_per_passenger %}
                                {% endfor %}
                            {% endfor %}
                            <h3 class="fs-2 fw-bold">{{ totalEarnings|number_format(3) }}</h3>
                            <p class="text-muted mb-0">Total Earnings (TND)</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Tab Navigation -->
            <div class="tab-bar shadow-sm">
                <div class="tab-item active" data-tab="upcoming">Upcoming Trips</div>
                <div class="tab-item" data-tab="past">Past Trips</div>
                <div class="tab-item" data-tab="all">All Trips</div>
            </div>

            <!-- Trip List Sections -->
            <div id="upcoming-tab" class="tab-content active">
                <div class="row g-4">
                    {% set upcomingTrips = [] %}
                    {% for trip in driverTrips %}
                        {% if trip.departureDate > 'now'|date('Y-m-d H:i:s') %}
                            {% set upcomingTrips = upcomingTrips|merge([trip]) %}
                        {% endif %}
                    {% endfor %}

                    {% if upcomingTrips|length > 0 %}
                        {% for trip in upcomingTrips %}
                            {% include 'front/carpooling/DriverTripCard.twig' with {'trip': trip} %}
                        {% endfor %}
                    {% else %}
                        <div class="col-12">
                            <div class="no-trips-container shadow-sm">
                                <div class="mb-4">
                                    <i class="fas fa-calendar-alt text-carpooling" style="font-size: 4rem;"></i>
                                </div>
                                <h3>No Upcoming Trips</h3>
                                <p class="text-muted mb-4">You don't have any scheduled trips in the future.</p>
                                <button type="button" class="btn btn-carpooling" data-bs-toggle="modal" data-bs-target="#addTripModal">
                                    <i class="fas fa-plus me-2"></i> Add New Trip
                                </button>
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>

            <div id="past-tab" class="tab-content">
                <div class="row g-4">
                    {% set pastTrips = [] %}
                    {% for trip in driverTrips %}
                        {% if trip.departureDate < 'now'|date('Y-m-d H:i:s') %}
                            {% set pastTrips = pastTrips|merge([trip]) %}
                        {% endif %}
                    {% endfor %}

                    {% if pastTrips|length > 0 %}
                        {% for trip in pastTrips %}
                            {% include 'front/carpooling/DriverTripCard.twig' with {'trip': trip} %}
                        {% endfor %}
                    {% else %}
                        <div class="col-12">
                            <div class="no-trips-container shadow-sm">
                                <div class="mb-4">
                                    <i class="fas fa-history text-carpooling" style="font-size: 4rem;"></i>
                                </div>
                                <h3>No Past Trips</h3>
                                <p class="text-muted mb-4">You haven't completed any trips yet.</p>
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>

            <div id="all-tab" class="tab-content">
                <div class="row g-4">
                    {% if driverTrips|length > 0 %}
                        {% for trip in driverTrips %}
                            {% include 'front/carpooling/DriverTripCard.twig' with {'trip': trip} %}
                        {% endfor %}
                    {% else %}
                        <div class="col-12">
                            <div class="no-trips-container shadow-sm">
                                <div class="mb-4">
                                    <i class="fas fa-car-side text-carpooling" style="font-size: 4rem;"></i>
                                </div>
                                <h3>No Trips Found</h3>
                                <p class="text-muted mb-4">You haven't created any trips yet. Start by adding a new trip.</p>
                                <button type="button" class="btn btn-carpooling" data-bs-toggle="modal" data-bs-target="#addTripModal">
                                    <i class="fas fa-plus me-2"></i> Add New Trip
                                </button>
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </section>

    <!-- Floating Add Trip Button -->
    <div class="add-trip-fab shadow" data-bs-toggle="modal" data-bs-target="#addTripModal">
        <i class="fas fa-plus"></i>
    </div>

    <!-- Add/Edit Trip Modal -->
    <div class="modal fade" id="addTripModal" tabindex="-1" aria-labelledby="addTripModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addTripModalLabel">
                        <i class="fas fa-car-side me-2"></i>
                        <span id="modalTitle">Add New Trip</span>
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form id="tripForm" action="{{ path('app_driver_trip_save') }}" method="POST">
                    <div class="modal-body">
                        <input type="hidden" id="tripId" name="tripId" value="">

                        <div class="row g-4">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="departureCity" class="form-label">Departure City</label>
                                    <select id="departureCity" name="departureCity" class="form-select" required>
                                        <option value="">Select a city</option>
                                        {% for city in cities %}
                                            <option value="{{ city }}">{{ city }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="arrivalCity" class="form-label">Arrival City</label>
                                    <select id="arrivalCity" name="arrivalCity" class="form-select" required>
                                        <option value="">Select a city</option>
                                        {% for city in cities %}
                                            <option value="{{ city }}">{{ city }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="departureDate" class="form-label">Departure Date</label>
                                    <input type="date" id="departureDate" name="departureDate" class="form-control" required min="{{ 'now'|date('Y-m-d') }}">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="departureTime" class="form-label">Departure Time</label>
                                    <input type="time" id="departureTime" name="departureTime" class="form-control" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="availableSeats" class="form-label">Available Seats</label>
                                    <input type="number" id="availableSeats" name="availableSeats" class="form-control" min="1" max="8" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="pricePerPassenger" class="form-label">Price Per Passenger (TND)</label>
                                    <input type="number" id="pricePerPassenger" name="pricePerPassenger" class="form-control" min="1" step="0.001" required>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label for="notes" class="form-label">Additional Notes (Optional)</label>
                                    <textarea id="notes" name="notes" class="form-control" rows="3" placeholder="Any additional information for passengers..."></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-carpooling">
                            <i class="fas fa-save me-2"></i>
                            <span id="modalSubmitBtn">Save Trip</span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Delete Trip Confirmation Modal -->
    <div class="modal fade" id="deleteTripModal" tabindex="-1" aria-labelledby="deleteTripModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="deleteTripModalLabel">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Confirm Deletion
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete this trip?</p>
                    <div id="deleteWarningMessage" class="alert alert-warning d-none">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        This trip has existing bookings. Deleting it will cancel all passenger reservations.
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form id="deleteTripForm" action="{{ path('app_driver_trip_delete') }}" method="POST">
                        <input type="hidden" id="deleteTripId" name="tripId">
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash-alt me-2"></i> Delete Trip
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block page_javascripts %}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Tab navigation
            const tabItems = document.querySelectorAll('.tab-item');
            const tabContents = document.querySelectorAll('.tab-content');

            tabItems.forEach(tab => {
                tab.addEventListener('click', function() {
                    const tabId = this.getAttribute('data-tab');

                    // Remove active class from all tabs and content
                    tabItems.forEach(item => item.classList.remove('active'));
                    tabContents.forEach(content => content.classList.remove('active'));

                    // Add active class to clicked tab and corresponding content
                    this.classList.add('active');
                    document.getElementById(`${tabId}-tab`).classList.add('active');
                });
            });

            // Edit trip functionality
            const editButtons = document.querySelectorAll('.edit-trip-btn');

            editButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const tripId = this.getAttribute('data-id');
                    const tripData = JSON.parse(this.getAttribute('data-trip'));

                    // Set form fields
                    document.getElementById('tripId').value = tripId;
                    document.getElementById('departureCity').value = tripData.departureCity;
                    document.getElementById('arrivalCity').value = tripData.arrivalCity;

                    // Parse date and time
                    const departureDateTime = new Date(tripData.departureDate);
                    const dateStr = departureDateTime.toISOString().split('T')[0];

                    // Format time as HH:MM
                    let hours = departureDateTime.getHours();
                    let minutes = departureDateTime.getMinutes();
                    hours = hours < 10 ? '0' + hours : hours;
                    minutes = minutes < 10 ? '0' + minutes : minutes;
                    const timeStr = `${hours}:${minutes}`;

                    document.getElementById('departureDate').value = dateStr;
                    document.getElementById('departureTime').value = timeStr;
                    document.getElementById('availableSeats').value = tripData.availableSeats;
                    document.getElementById('pricePerPassenger').value = tripData.pricePerPassenger;
                    document.getElementById('notes').value = tripData.notes || '';

                    // Update modal title and button
                    document.getElementById('modalTitle').textContent = 'Edit Trip';
                    document.getElementById('modalSubmitBtn').textContent = 'Update Trip';

                    // Show modal
                    const modal = new bootstrap.Modal(document.getElementById('addTripModal'));
                    modal.show();
                });
            });

            // Delete trip functionality
            const deleteButtons = document.querySelectorAll('.delete-trip-btn');

            deleteButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const tripId = this.getAttribute('data-id');
                    const hasBookings = this.getAttribute('data-has-bookings') === 'true';

                    document.getElementById('deleteTripId').value = tripId;

                    if (hasBookings) {
                        document.getElementById('deleteWarningMessage').classList.remove('d-none');
                    } else {
                        document.getElementById('deleteWarningMessage').classList.add('d-none');
                    }

                    const modal = new bootstrap.Modal(document.getElementById('deleteTripModal'));
                    modal.show();
                });
            });

            // Reset form when adding a new trip
            document.querySelector('.add-trip-fab').addEventListener('click', function() {
                document.getElementById('tripForm').reset();
                document.getElementById('tripId').value = '';
                document.getElementById('modalTitle').textContent = 'Add New Trip';
                document.getElementById('modalSubmitBtn').textContent = 'Save Trip';
            });
        });
    </script>
{% endblock %}