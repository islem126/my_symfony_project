    <style>
        /* ========== BASE STYLES ========== */
        body {
            font-family: 'Source Sans 3', sans-serif;
            background-color: var(--bs-body-bg);
            color: var(--bs-body-color);
            transition: background-color 0.3s ease, color 0.3s ease;
        }

        /* ========== SIDEBAR STYLES ========== */
        #sidebar {
            width: 280px;
            background: var(--sidebar-bg);
            color: var(--sidebar-text);
            position: fixed;
            height: 100vh;
            top: 0;
            left: 0;
            z-index: 999;
            transition: all 0.3s ease;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.15);
        }

        #sidebar.active {
            margin-left: -280px;
        }

        .app-main {
            margin-left: 280px;
            transition: margin-left 0.3s ease;
        }

        body.sidebar-collapsed .app-main {
            margin-left: 0;
        }

        body.sidebar-collapsed .app-header {
            left: 0;
        }

        .custom-menu {
            position: absolute;
            top: 20px;
            right: -60px;
            z-index: 1000;
            transition: all 0.3s;
        }

        #sidebarCollapse {
            width: 45px;
            height: 45px;
            background: var(--sidebar-bg);
            color: white;
            border: none;
            border-radius: 50%;
            cursor: pointer;
            box-shadow: 0 1px 4px rgba(0, 0, 0, 0.3);
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s;
        }

        #sidebarCollapse:hover {
            background: var(--sidebar-hover);
            transform: rotate(90deg);
        }

        #sidebarCollapse i {
            font-size: 1.2rem;
        }

        .sidebar-content {
            display: flex;
            flex-direction: column;
            height: 100%;
            padding: 20px 15px;
            overflow-y: auto;
            scrollbar-width: thin;
            scrollbar-color: rgba(255, 255, 255, 0.2) transparent;
        }

        .sidebar-content::-webkit-scrollbar {
            width: 6px;
        }

        .sidebar-content::-webkit-scrollbar-thumb {
            background-color: rgba(255, 255, 255, 0.2);
            border-radius: 3px;
        }

        .logo-container {
            padding: 10px 5px 25px 5px;
        }

        .logo {
            display: flex;
            align-items: center;
            text-decoration: none;
            color: white;
            width: 50px;
            height: 50px;
        }

        .logo:hover {
            color: white;
            opacity: 0.9;
        }

        .logo img {
            height: 60px;
            width: auto;
            transition: all 0.3s ease;
        }

        .logo span {
            font-size: 1.2rem;
            margin-left: 10px;
            font-family: 'Brittany Signature';
            font-size: 30px;
        }

        .nav-list {
            list-style: none;
            padding: 0;
            margin: 0 0 30px 0;
        }

        .nav-item {
            margin-bottom: 8px;
        }

        .nav-link {
            display: flex;
            align-items: center;
            padding: 12px 15px;
            color: var(--sidebar-text);
            text-decoration: none;
            border-radius: 10px;
            transition: all 0.2s ease;
            position: relative;
            background: var(--sidebar-item-bg);
        }

        .nav-link:hover {
            background: var(--sidebar-item-hover);
            color: var(--sidebar-text-hover);
            transform: translateX(5px);
        }

        .nav-item.active .nav-link {
            background: var(--sidebar-active-bg);
            color: var(--sidebar-text-hover);
            font-weight: 600;
        }

        .nav-icon {
            font-size: 1.2rem;
            min-width: 24px;
            margin-right: 10px;
            text-align: center;
        }

        .logout-container {
            margin-top: auto;
            padding: 20px 0;
        }

        .logout-btn {
            display: flex;
            align-items: center;
            padding: 12px 15px;
            background-color: var(--logout-bg);
            color: white;
            border-radius: 10px;
            text-decoration: none;
            transition: all 0.2s ease;
            width: auto;
            max-width: 150px;
        }

        .logout-btn:hover {
            background-color: var(--logout-hover);
            color: white;
            transform: translateX(5px);
        }

        .logout-btn i {
            font-size: 1.2rem;
            margin-right: 10px;
        }

        .sidebar-footer {
            padding-top: 15px;
            text-align: center;
            font-size: 0.8rem;
            color: var(--sidebar-footer-text);
        }

        /* ========== TOPBAR STYLES ========== */
        .app-header {
            position: sticky;
            top: 0;
            right: 0;
            left: 280px;
            z-index: 998;
            height: 60px;
            padding: 0;
            background-color: var(--bs-body-bg);
            border-bottom: 1px solid var(--bs-border-color);
            transition: all 0.3s ease;
        }

        .logo-link {
            display: flex !important;
            align-items: center;
            padding: 0.5rem 1rem;
            text-decoration: none;
            background-color: transparent;
        }

        .topbar-logo {
            height: 36px;
            width: auto;
            margin-right: 0.5rem;
        }

        .logo-text {
            color: var(--bs-primary);
            font-size: 1.2rem;
        }

        .app-header .navbar-nav .nav-link {
            padding: 0.5rem 1rem;
            color: var(--bs-secondary-color);
            position: relative;
            display: flex;
            align-items: center;
            background-color: transparent;
        }

        .app-header .navbar-nav .nav-link:hover {
            color: var(--bs-primary);
        }

        .navbar-badge {
            position: absolute;
            top: 0;
            right: 2px;
            font-size: 0.6rem;
            padding: 2px 4px;
        }

        .user-image {
            width: 32px;
            height: 32px;
            object-fit: cover;
            transition: all 0.2s ease;
        }

        .user-menu .dropdown-menu {
            border: none;
            padding: 0;
            width: 280px;
            background-color: var(--bs-body-bg);
            border-color: var(--bs-border-color);
        }

        .user-header {
            border-top-left-radius: 0.375rem;
            border-top-right-radius: 0.375rem;
            background-color: var(--bs-tertiary-bg);
        }

        .user-footer {
            background-color: var(--bs-tertiary-bg);
            border-bottom-left-radius: 0.375rem;
            border-bottom-right-radius: 0.375rem;
            border-top: 1px solid var(--bs-border-color);
        }

        .dropdown-menu {
            animation: dropdown-animation 0.2s ease forwards;
        }

        .dropdown-item {
            padding: 0.5rem 1rem;
            white-space: normal;
            color: var(--bs-body-color);
        }

        .dropdown-item:hover {
            background-color: var(--bs-tertiary-bg);
            color: var(--bs-emphasis-color);
        }

        .dropdown-header {
            font-weight: 600;
            padding: 0.5rem 1rem;
            color: var(--bs-heading-color);
        }

        .dropdown-footer {
            font-weight: 500;
            color: var(--bs-primary);
            text-align: center;
            padding: 0.5rem;
            display: block;
        }

        .dropdown-divider {
            margin: 0;
            border-color: var(--bs-border-color);
        }

        #live-clock {
            font-size: 0.85rem;
            color: var(--bs-secondary-color);
        }

        #darkModeToggle {
            background: transparent;
            border: none;
            padding: 0.5rem 1rem;
            color: var(--bs-secondary-color);
        }

        #darkModeToggle:hover {
            color: var(--bs-primary);
        }

        .btn-link.nav-link {
            text-decoration: none;
            background: transparent;
            border: none;
            box-shadow: none;
        }

        /* ========== LIGHT THEME SPECIFIC STYLES ========== */
        :root {
            --sidebar-bg: #0d6efd;
            --sidebar-hover: #0b5ed7;
            --sidebar-text: rgba(255, 255, 255, 0.85);
            --sidebar-text-hover: #fff;
            --sidebar-item-bg: rgba(255, 255, 255, 0.08);
            --sidebar-item-hover: rgba(255, 255, 255, 0.15);
            --sidebar-active-bg: rgba(255, 255, 255, 0.2);
            --sidebar-footer-text: rgba(255, 255, 255, 0.5);
            --logout-bg: #dc3545;
            --logout-hover: #bb2d3b;
            --card-bg: #fff;
            --card-header-bg: #f8f9fa;
            --table-striped-odd: rgba(0, 0, 0, 0.02);
            --table-striped-even: #fff;
        }

        body:not(.dark-mode) .app-header,
        body:not(.dark-mode) .app-footer {
            background-color: var(--bs-body-bg);
            color: var(--bs-body-color);
            border-color: var(--bs-border-color);
        }

        body:not(.dark-mode) .card {
            background-color: var(--card-bg);
            border-color: var(--bs-border-color);
        }

        body:not(.dark-mode) .card-header,
        body:not(.dark-mode) .card-footer {
            background-color: var(--card-header-bg);
            border-color: var(--bs-border-color);
        }

        body:not(.dark-mode) .app-content-header {
            background-color: var(--bs-tertiary-bg);
            color: var(--bs-body-color);
        }

        body:not(.dark-mode) .table-striped tbody tr:nth-of-type(odd) {
            background-color: var(--table-striped-odd);
        }

        body:not(.dark-mode) .table-striped tbody tr:nth-of-type(even) {
            background-color: var(--table-striped-even);
        }

        /* ========== DARK THEME SPECIFIC STYLES ========== */
        body.dark-mode {
            --sidebar-bg: #1a1a1a;
            --sidebar-hover: #252525;
            --sidebar-text: #e0e0e0;
            --sidebar-text-hover: #fff;
            --sidebar-item-bg: rgba(255, 255, 255, 0.05);
            --sidebar-item-hover: rgba(255, 255, 255, 0.1);
            --sidebar-active-bg: rgba(255, 255, 255, 0.15);
            --sidebar-footer-text: #888;
            --logout-bg: #9c2b2e;
            --logout-hover: #b92d30;
            --card-bg: #1e1e1e;
            --card-header-bg: #252525;
            --table-striped-odd: #1a1a1a;
            --table-striped-even: #212121;

            background-color: #121212 !important;
            color: #e0e0e0 !important;
        }

        body.dark-mode .app-header,
        body.dark-mode .app-footer {
            background-color: #1e1e1e !important;
            color: #e0e0e0 !important;
            border-color: #333 !important;
        }

        body.dark-mode .app-header .nav-link,
        body.dark-mode .app-header .dropdown-toggle,
        body.dark-mode #darkModeToggle,
        body.dark-mode #live-clock {
            color: #e0e0e0 !important;
            background-color: transparent !important;
        }

        body.dark-mode .app-header .nav-link:hover,
        body.dark-mode .app-header .dropdown-toggle:hover,
        body.dark-mode #darkModeToggle:hover {
            color: #ffffff !important;
            background-color: transparent !important;
        }

        body.dark-mode .logo-text {
            color: #6ea8fe !important;
        }

        body.dark-mode .app-content-header {
            background-color: #1e1e1e !important;
            color: #e0e0e0 !important;
        }

        body.dark-mode .card {
            background-color: #1e1e1e !important;
            color: #e0e0e0 !important;
            border-color: #333 !important;
        }

        body.dark-mode .card-header,
        body.dark-mode .card-footer {
            background-color: #252525 !important;
            border-color: #333 !important;
            color: #e0e0e0 !important;
        }

        body.dark-mode .table,
        body.dark-mode .table-striped,
        body.dark-mode .table-responsive,
        body.dark-mode .table thead,
        body.dark-mode .table tbody,
        body.dark-mode .table tfoot,
        body.dark-mode .table tr,
        body.dark-mode .table th,
        body.dark-mode .table td {
            background-color: transparent !important;
            color: #e0e0e0 !important;
            border-color: #333 !important;
        }

        body.dark-mode .table-striped tbody tr:nth-of-type(odd) {
            background-color: #1a1a1a !important;
        }

        body.dark-mode .table-striped tbody tr:nth-of-type(even) {
            background-color: #212121 !important;
        }

        body.dark-mode .bg-white,
        body.dark-mode .bg-light,
        body.dark-mode .card-header.bg-white,
        body.dark-mode .card-footer.bg-white {
            background-color: #1e1e1e !important;
            color: #e0e0e0 !important;
        }

        body.dark-mode .dropdown-menu,
        body.dark-mode .user-menu .dropdown-menu {
            background-color: #252525 !important;
            border-color: #333 !important;
        }

        body.dark-mode .dropdown-item,
        body.dark-mode .user-menu .dropdown-item {
            color: #e0e0e0 !important;
        }

        body.dark-mode .dropdown-item:hover,
        body.dark-mode .user-menu .dropdown-item:hover {
            background-color: #333 !important;
            color: #fff !important;
        }

        body.dark-mode .dropdown-header {
            color: #e0e0e0 !important;
        }

        body.dark-mode .dropdown-divider {
            border-color: #333 !important;
        }

        body.dark-mode .user-header,
        body.dark-mode .user-footer {
            background-color: #252525 !important;
            border-color: #333 !important;
        }


        body.dark-mode p,
        body.dark-mode h1,
        body.dark-mode h2,
        body.dark-mode h3,
        body.dark-mode h4,
        body.dark-mode h5,
        body.dark-mode h6,
        body.dark-mode .card-title,
        body.dark-mode label,
        body.dark-mode .breadcrumb-item,
        body.dark-mode .breadcrumb-item.active {
            color: #e0e0e0 !important;
        }

        body.dark-mode a:not(.btn):not(.nav-link):not(.dropdown-item) {
            color: #6ea8fe !important;
        }

        body.dark-mode a:not(.btn):not(.nav-link):not(.dropdown-item):hover {
            color: #8eb8fe !important;
        }

        /* Fix button background in dark mode */
        body.dark-mode .btn-light {
            background-color: #333 !important;
            border-color: #444 !important;
            color: #e0e0e0 !important;
        }

        body.dark-mode .btn-light:hover {
            background-color: #444 !important;
            border-color: #555 !important;
            color: #fff !important;
        }

        /* ========== RESPONSIVE ADJUSTMENTS ========== */
        @media (max-width: 991.98px) {
            #sidebar {
                margin-left: -280px;
            }

            #sidebar.active {
                margin-left: 0;
            }

            .app-header {
                left: 0;
            }

            .app-main {
                margin-left: 0;
            }

            body.sidebar-active .app-main {
                overflow: hidden;
            }

            body.sidebar-active::before {
                content: '';
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: rgba(0, 0, 0, 0.5);
                z-index: 998;
            }

            .custom-menu {
                right: -45px;
            }
        }

        @keyframes dropdown-animation {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

    </style>
    {% block stylesheets %}{% endblock %}
    {% block javascripts_head %}{% endblock %}
</head>
